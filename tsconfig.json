{
  "compilerOptions": {
    /* вихідні файли */
    "outDir": "dist",                 // куди класти .js після компіляції
    "rootDir": ".",                   // звідки брати .ts

    /* модуль + таргет */
    "module": "commonjs",             // щоб запускати звичайним node
    "target": "es2020",               // досить для Node 18+
    "esModuleInterop": true,          // імпорт пакетів типу `import express from "express"`

    /* решта зручностей */
    "sourceMap": true,                // мапи для дебагу
    "resolveJsonModule": true,        // імпорт .json, якщо треба
    "strict": true,                   // суворий режим (можеш вимкнути)
    "skipLibCheck": true              // швидший build
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
